<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="120"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="140">
    <item android:id="@android:id/background">
        <shape
            android:innerRadiusRatio="6"
            android:shape="ring"
            android:useLevel="false"
            android:angle="0"
            android:type="sweep"
            android:thicknessRatio="50.0">
            <solid android:color="#666666"/>
        </shape>

    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="120"
            android:toDegrees="120">
            <shape
                android:innerRadiusRatio="7"
                android:shape="ring"
                android:angle="0"
                android:type="sweep"
                android:thicknessRatio="05.0">
                <solid android:color="@color/doveaz_orange"/>

                <gradient
                    android:centerColor="#ff6600"
                    android:centerY="0.50"
                    android:endColor="#cc0000"
                    android:startColor="#009900"
                    android:type="sweep"
                    android:useLevel="false" />
            </shape>
        </rotate>
    </item>
</layer-list>