<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/five_dp"
        android:layout_marginLeft="@dimen/five_dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.doveazapp.Utils.CustomDoveazFont
            android:id="@+id/order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Order Id:" />

        <com.doveazapp.Utils.CustomDoveazFont
            android:id="@+id/txt_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/five_dp"
        android:layout_marginLeft="@dimen/five_dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.doveazapp.Utils.CustomDoveazFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name:" />

        <com.doveazapp.Utils.CustomDoveazFont
            android:id="@+id/delivery_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/five_dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.doveazapp.Utils.CustomDoveazFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Address:" />

        <com.doveazapp.Utils.CustomDoveazFont
            android:id="@+id/pickup_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.doveazapp.Utils.CustomDoveazFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Payment Type:" />

        <com.doveazapp.Utils.CustomDoveazFont
            android:id="@+id/pickup_payment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.doveazapp.Utils.CustomDoveazFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cash to be paid (Rs):" />

        <com.doveazapp.Utils.CustomDoveazFont
            android:id="@+id/pickup_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/five_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.doveazapp.Utils.CustomDoveazFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status:" />

            <com.doveazapp.Utils.CustomDoveazFont
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_weight="1" />
        </LinearLayout>
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/five_dp"
            android:layout_marginLeft="@dimen/twenty_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_map"
                android:layout_width="@dimen/onetwenty_dp"
                android:layout_height="@dimen/thirty_five_dp"
                android:background="@drawable/rounded_button"
                android:text="@string/map_address"
                android:textAllCaps="false"
                android:textColor="@color/appbackround" />

            <Button
                android:id="@+id/button_call"
                android:layout_width="@dimen/onetwenty_dp"
                android:layout_height="@dimen/thirty_five_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:background="@drawable/rounded_button"
                android:text="@string/call_text"
                android:textAllCaps="false"
                android:textColor="@color/appbackround" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_update_status"
                android:layout_width="@dimen/onetwenty_dp"
                android:layout_height="@dimen/thirty_five_dp"
                android:background="@drawable/rounder_grey_button"
                android:text="@string/update_item_delivered"
                android:textAllCaps="false"
                android:textColor="@color/appbackround" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>