<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appbackround"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ten_dp"
        android:paddingLeft="@dimen/five_dp"
        android:paddingRight="@dimen/five_dp"
        android:paddingTop="@dimen/ten_dp">

        <TextView
            android:id="@+id/Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:text="id"
            android:visibility="gone" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/forty_dp"
            android:text="fullname"
            android:textColor="@color/doveaz_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textColor="@color/doveaz_orange" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ten_dp"
            android:orientation="vertical">

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@color/doveaz_blue" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@color/doveaz_orange" />-->
        </LinearLayout>


        <TextView
            android:id="@+id/receiver_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="receiver id"
            android:textColor="@color/doveaz_blue"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/ten_dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/service_a_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="service A id"
            android:visibility="gone" />

        <TextView
            android:id="@+id/service_b_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="service B id"
            android:visibility="gone" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/five_dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ten_dp"
        android:paddingRight="@dimen/ten_dp"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_view"
            android:layout_width="@dimen/hundred_dp"
            android:layout_height="@dimen/thirty_five_dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_weight="1"
            android:background="@drawable/rounder_grey_button"
            android:text="@string/view"
            android:textAllCaps="false"
            android:textColor="@color/appbackround" />

        <Button
            android:id="@+id/btn_engage"
            android:layout_width="@dimen/hundred_dp"
            android:layout_height="@dimen/thirty_five_dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="@string/accept"
            android:textAllCaps="false"
            android:textColor="@color/appbackround" />

        <Button
            android:id="@+id/btn_decline"
            android:layout_width="@dimen/hundred_dp"
            android:layout_height="@dimen/thirty_five_dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/decline_round"
            android:text="@string/decline"
            android:textAllCaps="false"
            android:textColor="@color/appbackround" />

    </LinearLayout>
</LinearLayout>