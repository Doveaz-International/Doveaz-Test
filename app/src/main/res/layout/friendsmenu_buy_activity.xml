<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackround"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp"
        android:layout_gravity="center"
        android:background="@color/doveaz_orange"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/verified_tab"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sixty_dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/verified"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/ten_dp"
            android:stateListAnimator="@null"
            android:text="@string/verified_agents"
            android:textAllCaps="false"
            android:textColor="@color/appbackround" />

        <Button
            android:id="@+id/courier_tab"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sixty_dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/group_tab"
            android:paddingLeft="@dimen/twenty_dp"
            android:paddingRight="@dimen/ten_dp"
            android:stateListAnimator="@null"
            android:text="@string/groups"
            android:textAllCaps="false"
            android:textColor="@color/appbackround" />

    </LinearLayout>

