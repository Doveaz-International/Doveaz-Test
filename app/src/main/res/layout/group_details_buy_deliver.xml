<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/twenty_dp"
        android:paddingRight="@dimen/twenty_dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/doveaz_blue" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/two_dp"
            android:layout_marginTop="@dimen/two_dp"
            android:gravity="center"
            android:text="@string/group_details"
            android:textColor="@color/doveaz_blue"
            android:textSize="@dimen/twenty_dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/doveaz_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:background="@color/button_grey"
            android:orientation="horizontal">

            <com.doveazapp.Utils.UserAvatar
                android:id="@+id/group_image"
                android:layout_width="@dimen/seventy_dp"
                android:layout_height="@dimen/seventy_dp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:src="@drawable/group" />

            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/fifteen_dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/doveaz_orange"
                android:textSize="@dimen/fifteen_dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/twenty_dp"
        android:paddingRight="@dimen/twenty_dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_marginLeft="@dimen/twentyfive_dp"
                android:layout_marginRight="@dimen/twentyfive_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/risk_score1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/forty_dp"
                    android:textColor="@color/doveaz_blue" />

                <TextView
                    android:id="@+id/text_risk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/doveaz_orange" />
            </TableRow>

            <TableRow
                android:layout_marginLeft="@dimen/twentyfive_dp"
                android:layout_marginRight="@dimen/twentyfive_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/forty_dp"
                    android:textColor="@color/doveaz_blue" />

                <TextView
                    android:id="@+id/text_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/doveaz_orange" />
            </TableRow>

            <TableRow
                android:layout_marginLeft="@dimen/twentyfive_dp"
                android:layout_marginRight="@dimen/twentyfive_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/forty_dp"
                    android:textColor="@color/doveaz_blue" />

                <TextView
                    android:id="@+id/text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/doveaz_orange" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/forty_dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_engage_group"
                android:layout_width="@dimen/one_fifty_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/ten_dp"
                android:background="@drawable/rounded_button"
                android:text="@string/engage"
                android:textColor="@color/appbackround" />

            <!--<Button
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rounder_grey_button"
                android:text="@string/cancel"
                android:textColor="@color/appbackround" />-->
        </LinearLayout>


    </LinearLayout>
</LinearLayout>