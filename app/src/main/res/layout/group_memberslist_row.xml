<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appbackround"
    android:orientation="vertical">

    <TextView
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:text="jhnhubg"
        android:textColor="@color/doveaz_blue"
        android:textSize="@dimen/fifteen_dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/five_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <com.doveazapp.Utils.UserAvatar
                android:id="@+id/group_image"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:src="@drawable/group" />

            <Button
                android:id="@+id/button_remove"
                android:layout_width="@dimen/eighty_dp"
                android:layout_height="@dimen/thirty_five_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/eighty_dp"
                android:background="@drawable/decline_round"
                android:text="@string/remove"
                android:textAllCaps="false"
                android:textColor="@color/appbackround" />
        </LinearLayout>

        <TextView
            android:id="@+id/group_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/ten_dp"
            android:text=""
            android:textColor="@color/doveaz_blue"
            android:textSize="@dimen/fifteen_dp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>