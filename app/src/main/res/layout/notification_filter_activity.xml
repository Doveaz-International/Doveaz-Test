<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/doveaz_blue"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@color/doveaz_blue"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/doveaz_orange">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">

            <Button
                android:id="@+id/btn_sent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/doveaz_orange"
                android:drawableRight="@drawable/sent"
                android:paddingRight="@dimen/fifteen_dp"
                android:text="@string/sent_request"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_declined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/doveaz_orange"
                android:drawableRight="@drawable/declined"
                android:paddingLeft="@dimen/five_dp"
                android:paddingRight="@dimen/fifteen_dp"
                android:text="@string/declined_request"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <!--Available jobs for partners & Available partners for Deliver-->
            <Button
                android:id="@+id/btn_engagements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/doveaz_orange"
                android:drawableRight="@drawable/engage"
                android:paddingLeft="@dimen/five_dp"
                android:paddingRight="@dimen/fifteen_dp"
                android:textAllCaps="false"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/btn_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/doveaz_orange"
                android:drawableRight="@drawable/status"
                android:paddingLeft="@dimen/five_dp"
                android:paddingRight="@dimen/fifteen_dp"
                android:text="@string/accept_response"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <!--<Button
                android:id="@+id/btn_negotiations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/doveaz_orange"
                android:drawableRight="@drawable/negotiate"
                android:paddingLeft="@dimen/five_dp"
                android:paddingRight="@dimen/fifteen_dp"
                android:text="@string/negotiation_response"
                android:textAllCaps="false"
                android:textColor="@color/white" />-->

            <Button
                android:id="@+id/btn_status_for_partner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/doveaz_orange"
                android:drawableRight="@drawable/status"
                android:paddingLeft="@dimen/five_dp"
                android:paddingRight="@dimen/fifteen_dp"
                android:text="@string/check_service_status"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
