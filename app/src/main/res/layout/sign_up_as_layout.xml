<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackround"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/button_partner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/doveaz_blue"
            android:drawableTop="@drawable/register_partner1"
            android:paddingTop="@dimen/twenty_dp"
            android:text="@string/sign_up_agent"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/button_deliver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/doveaz_orange"
            android:drawableTop="@drawable/register_deliver"
            android:paddingTop="@dimen/twenty_dp"
            android:text="@string/sign_up_deliver"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_dp" />
    </LinearLayout>


</LinearLayout>